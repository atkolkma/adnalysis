jQuery ->
	$('#function-selector').on "change", ->
	  value = $(this).val()
	  if value == 'truncate'
	      $('#functions').append('<%= Truncate.form %>' )
	  if value == 'sort'
	      $('#functions').append('<%= Sorting.form %>' )
      $('#functions').append($('#function-selector'))
      $('#function-selector').val('select') 

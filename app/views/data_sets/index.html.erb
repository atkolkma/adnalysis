<p id="notice"><%= notice %></p>

<h1>Listing Data Sets</h1>

<table class= "table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Source files</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @data_sets.each do |data_set| %>
      <tr>
        <td><%= data_set.name %></td>
        <td>
          <% if data_set.file_names %>
          <% data_set.file_names.each do |fn| %>
            <%= fn %> <br>
          <% end %>
          <% end %>
        </td>
        <td><%= link_to 'View', data_set %></td>
        <td><%= link_to 'Edit', edit_data_set_path(data_set) %></td>
        <td><%= link_to 'Delete', data_set, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


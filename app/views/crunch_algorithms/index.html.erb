<p id="notice"><%= notice %></p>

<h1>Listing Crunch Algorithms</h1>

<table class= "table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Functions</th>
      <th>Data Source</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crunch_algorithms.each do |crunch_algorithm| %>
      <tr>
        <td><%= crunch_algorithm.name %></td>
        <td><% crunch_algorithm.functions.each_with_index do |f, i|%>
            <%= i+1 %>) <%= f["name"].to_s.gsub('_',' ').titleize  %> <br>
          <% end %>
        </td>
        <td><%= crunch_algorithm.data_source.name if crunch_algorithm.data_source %></td>
        <td><%= link_to 'View', crunch_algorithm %></td>
        <td><%= link_to 'Edit', edit_crunch_algorithm_path(crunch_algorithm) %></td>
        <td><%= link_to 'Delete', crunch_algorithm, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

